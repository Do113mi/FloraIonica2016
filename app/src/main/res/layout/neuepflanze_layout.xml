<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Row 1 with 2 columns -->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="end">


            <TextView
                android:id="@+id/textView3"

                android:layout_width="0dip"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FundpunkNr:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CodeFont"/>

            <EditText
                android:id="@+id/editTextFundpunktNr"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="123456789" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"


                android:text="Datum: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CodeFont"/>

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="0dip"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="01.01.2015"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dip"

                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="Insel: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CodeFont"/>

            <Spinner
                android:id="@+id/spinnerInsel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/testdrop"
                android:prompt="@string/testdrop" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Km-Feld: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CodeFont"/>

            <EditText
                android:id="@+id/editTextKoordinaten"

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="mgrs- koord" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dip"

                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="LokalitÃ¤t: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CodeFont"/>

            <EditText
                android:id="@+id/editTextLokalitaet"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="5"
                android:minLines="1"
                android:scrollbars="vertical" />

        </TableRow>



        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView8"

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Habitat"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CodeFont"/>

            <EditText
                android:id="@+id/editTextHabitat"

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="trocken" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView9"

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BeobachterInnen: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CodeFont"/>

            <EditText
                android:id="@+id/editTextBeobachter"

                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Helene" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">
        </TableRow>



        <!-- Row 1 with 2 columns -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="end">


            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Position: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CodeFont"/>

            <TextView
                android:id="@+id/textViewGenauigkeit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="+/- 10m" />

            <TextView
                android:id="@+id/textViewNord"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:hint="N: 313m" />

            <TextView
                android:id="@+id/textViewWest"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:hint="W: 354m" />


        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="end">


            <TextView
                android:id="@+id/textView11"

                android:layout_width="0dip"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Taxon: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/CodeFont"/>

            <EditText
                android:id="@+id/editTextTaxon"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="genius spezie" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="end">



        <Button
            android:id="@+id/btnSpeichern2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:layout_alignEnd="@+id/editText3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editText3"
            android:textColor="#FFFFFF"
            android:backgroundTint="#689F38"
            android:text="Speichern" />

        <Button
            android:id="@+id/btnWeiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:layout_alignEnd="@+id/editText3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editText3"
            android:textColor="#FFFFFF"
            android:backgroundTint="#689F38"

            android:text="Optional" />
        </TableRow>
    </TableLayout>


</ScrollView>
